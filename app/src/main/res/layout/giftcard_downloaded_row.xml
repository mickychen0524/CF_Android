<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <TextView
            android:id="@+id/date_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/giftcards_checked_tile_image"
            android:layout_width="163dp"
            android:layout_height="120dp"
            android:layout_below="@+id/date_field" />

        <TextView
            android:id="@+id/giftcards_checked_name_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/giftcards_checked_tile_image"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/giftcards_checked_tile_image"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="1"
            android:text="Name"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/giftcard_checked_price_txt"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/giftcards_checked_name_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/giftcards_checked_tile_image"
            android:text="$50.00"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/giftcard_checked_list_redeem_btn"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_below="@+id/giftcard_checked_price_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/giftcards_checked_tile_image"
            android:background="@color/colorMainRed"
            android:text="REDEEM"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>