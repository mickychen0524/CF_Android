<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticket_list_item_swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:clickToClose="true">

    <LinearLayout
        android:id="@+id/ticket_list_wrapper_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:id="@+id/ticket_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ticket_list_tile_image"
            android:layout_width="103dp"
            android:layout_height="133dp"
            android:src="@drawable/channeltilehdsample" />

        <TextView
            android:id="@+id/ticket_claim_state_txt"
            android:layout_width="103dp"
            android:layout_height="9dp"
            android:layout_alignBottom="@+id/ticket_list_tile_image"
            android:background="@color/color_green_light"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ticket_list_gamelogo_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/ticket_list_preview_img"
            android:layout_toRightOf="@+id/ticket_list_tile_image"
            android:src="@drawable/vacash5logo" />

        <TextView
            android:id="@+id/ticket_list_createdon_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ticket_list_gamelogo_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/ticket_list_preview_img"
            android:layout_toRightOf="@+id/ticket_list_tile_image"
            android:gravity="center"
            android:maxLines="2"
            android:text="2017-10-1"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ticket_list_preview_img"
            android:layout_width="103dp"
            android:layout_height="133dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/ticket_list_tile_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ticket_list_tile_image"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/ticket_delete_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/background_transred_rectnormal"
                android:onClick="back"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ticket_claim_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:onClick="back"
                android:text="Claim"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
